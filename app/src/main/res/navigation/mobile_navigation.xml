    <fragment
        android:id="@+id/navigation_favourites"
        android:name="RateMe.FavouritesActivity.Favourites"
        tools:layout="@layout/favourites" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="RateMe.SettingsActivity.Settings"
        tools:layout="@layout/settings" />

