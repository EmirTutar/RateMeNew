    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_scan">

    <fragment
        android:id="@+id/navigation_scan"
        android:name="RateMe.ScanActivity.Scan.ScanFragment"
        tools:layout="@layout/activity_scan" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="RateMe.HistoryActivity.HistoryFragment"
        tools:layout="@layout/activity_history" />

    <fragment
        android:id="@+id/navigation_favourites"
        android:name="RateMe.FavouritesActivity.FavouritesFragment"
        tools:layout="@layout/activity_favourites" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="RateMe.SettingsActivity.SettingsFragment"
        tools:layout="@layout/activity_settings" />

